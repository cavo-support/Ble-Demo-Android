<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:navigationIcon="@mipmap/ic_back"
        app:title=" ">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_custom_ui"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_read" />

        <CheckBox
            android:id="@+id/cb_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_read"
            android:text="@string/app_time_color" />

        <EditText
            android:id="@+id/et_gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_color"
            android:hint="@string/app_gravity"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_gravity"
            android:hint="@string/app_x_coordinate"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_x"
            android:hint="@string/app_y_coordinate"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_y"
            android:text="@string/app_set" />


    </RelativeLayout>

</RelativeLayout>